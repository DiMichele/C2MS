# ==============================================================================
# SUGECO - Public Directory Security Configuration
# ==============================================================================
# Configurazione di sicurezza per la directory public di Laravel.
# Questo è il punto di ingresso dell'applicazione.
# ==============================================================================

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # Disabilita esecuzione CGI
    Options -ExecCGI

    RewriteEngine On

    # ==============================================================================
    # BLOCCO METODI HTTP PERICOLOSI (TRACE/TRACK)
    # ==============================================================================
    # Blocca TRACE e TRACK che possono essere usati per attacchi XST
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK) [NC]
    RewriteRule .* - [F,L]

    # ==============================================================================
    # FORCE HTTPS (opzionale - abilitare in produzione)
    # ==============================================================================
    # Decommentare le seguenti righe per forzare HTTPS a livello Apache
    # Utile se il middleware PHP non è sufficiente
    
    # RewriteCond %{HTTPS} off
    # RewriteCond %{HTTP:X-Forwarded-Proto} !https
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ==============================================================================
    # BLOCCO ACCESSO A FILE SENSIBILI
    # ==============================================================================
    
    # Blocca accesso a file nascosti (dotfiles)
    RewriteRule (^\.|/\.) - [F,L]
    
    # Blocca accesso a file di backup e temporanei
    RewriteRule \.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|swp|env)$ - [F,L]

    # ==============================================================================
    # BLOCCO ENDPOINT APACHE SENSIBILI
    # ==============================================================================
    
    # Blocca /server-status
    RewriteRule ^server-status$ - [F,L]
    
    # Blocca /server-info
    RewriteRule ^server-info$ - [F,L]
    
    # Blocca script CGI
    RewriteRule ^cgi-bin/ - [F,L]
    RewriteRule \.(cgi|pl)$ - [F,L]

    # ==============================================================================
    # PROTEZIONE DA ATTACCHI
    # ==============================================================================
    
    # Blocca path traversal
    RewriteCond %{REQUEST_URI} \.\./ [NC]
    RewriteRule ^ - [F,L]
    
    # Blocca null byte injection
    RewriteCond %{REQUEST_URI} %00 [NC]
    RewriteRule ^ - [F,L]
    
    # Blocca tentativi di SQL injection comuni nell'URL
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|delete|update|concat|char|declare) [NC]
    RewriteRule ^ - [F,L]
    
    # Blocca tentativi di script injection nell'URL
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule ^ - [F,L]

    # ==============================================================================
    # LARAVEL ROUTING
    # ==============================================================================

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ==============================================================================
# SECURITY HEADERS (applicati a TUTTE le risposte, inclusi file statici)
# ==============================================================================

<IfModule mod_headers.c>
    # Previene clickjacking - permette embedding solo dallo stesso dominio
    Header set X-Frame-Options "SAMEORIGIN"
    Header onsuccess set X-Frame-Options "SAMEORIGIN"
    
    # Previene MIME type sniffing - il browser deve rispettare il Content-Type
    Header set X-Content-Type-Options "nosniff"
    Header onsuccess set X-Content-Type-Options "nosniff"
    
    # Protezione XSS legacy (per browser più vecchi)
    Header set X-XSS-Protection "1; mode=block"
    Header onsuccess set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy - controlla quali informazioni vengono inviate come referrer
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header onsuccess set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy - disabilita funzionalità browser non necessarie
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=()"
    Header onsuccess set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=()"
    
    # Previene download automatico di file senza conferma
    Header set X-Download-Options "noopen"
    Header onsuccess set X-Download-Options "noopen"
    
    # Content Security Policy - protezione XSS e injection
    # Configurazione compatibile con Bootstrap/jQuery/jsTree - TUTTE LE RISORSE SONO LOCALI
    # blob: necessario per Web Workers (jsTree)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; worker-src 'self' blob:; connect-src 'self'; frame-ancestors 'self'; form-action 'self'; base-uri 'self'; object-src 'none'"
    Header onsuccess set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; worker-src 'self' blob:; connect-src 'self'; frame-ancestors 'self'; form-action 'self'; base-uri 'self'; object-src 'none'"
    
    # Rimuove header che espongono informazioni sul server
    Header unset X-Powered-By
    Header unset Server
    Header always unset X-Powered-By
    Header always unset Server
    
    # Cross-Origin headers per sicurezza aggiuntiva
    Header set Cross-Origin-Opener-Policy "same-origin"
    Header set Cross-Origin-Resource-Policy "same-origin"
    
    # HSTS - Strict Transport Security (solo se già su HTTPS)
    # Questo header dice al browser di usare sempre HTTPS per questo dominio
    # Decommentare in produzione quando HTTPS è configurato
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ==============================================================================
# PROTEZIONE FILE PHP
# ==============================================================================

# Permetti solo index.php - blocca accesso diretto ad altri file PHP
<FilesMatch "^(?!index\.php$).+\.php$">
    Require all denied
</FilesMatch>

# ==============================================================================
# MIME TYPES CORRETTI (previene esecuzione di file malevoli)
# ==============================================================================

<IfModule mod_mime.c>
    # Forza interpretazione corretta dei file
    AddType text/css .css
    AddType text/javascript .js
    AddType application/javascript .js
    AddType image/svg+xml .svg .svgz
    AddType application/json .json
    AddType font/woff .woff
    AddType font/woff2 .woff2
    
    # Previene esecuzione di file uploadati come PHP
    RemoveHandler .php .phtml .php3 .php4 .php5 .php7 .phps
    RemoveType .php .phtml .php3 .php4 .php5 .php7 .phps
</IfModule>

# ==============================================================================
# COMPRESSIONE
# ==============================================================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ==============================================================================
# CACHE CONTROL
# ==============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Immagini - cache lunga
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Font - cache lunga
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # CSS e JS - cache media (per permettere aggiornamenti)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
</IfModule>

# ==============================================================================
# LIMITI UPLOAD (protezione da DoS)
# ==============================================================================

# Limita la dimensione delle richieste (10MB)
LimitRequestBody 10485760
